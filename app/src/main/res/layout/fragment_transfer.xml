<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransferFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="@string/transferencia"
        android:background="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/string_insira_o_valor"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/insiraconta"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />
        <Button
            android:background="@color/teal_200"
            android:text="@string/transfer"
            android:id="@+id/btn_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/lv_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
</layout>